# ===========================================
# Stock Trading System Environment Variables
# ===========================================

# 애플리케이션 환경 설정
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# 데이터베이스 설정
# SQLite (개발환경)
DB_TYPE=sqlite
SQLITE_DB_PATH=./data/stock_data.db

# PostgreSQL (나중에 전환용)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=stock_trading_db
# DB_USER=stock_user
# DB_PASSWORD=stock123!@#

# SQLite 설정 (개발환경)
SQLITE_DB_PATH=./data/stock_data_dev.db

# 키움 API 설정
KIWOOM_USER_ID=your_kiwoom_id
KIWOOM_PASSWORD=your_kiwoom_password
KIWOOM_CERT_PASSWORD=your_cert_password

# 텔레그램 봇 설정
TELEGRAM_BOT_TOKEN=5552992144:AAFDNe7jZ-Qu8ITjtksrDzmG6cBCuheVM2I
TELEGRAM_CHAT_ID=5463712358

# 로깅 설정
LOG_DIR=./logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# 데이터 수집 설정
DATA_COLLECTION_ENABLED=True
DAILY_COLLECTION_TIME=18:00
TICK_COLLECTION_ENABLED=True
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=3.6

# 스케줄링 설정
SCHEDULER_ENABLED=True
WEEKEND_PROCESSING=False

# 백업 설정
BACKUP_ENABLED=True
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# API 요청 제한 설정
API_REQUEST_DELAY_MS=3600
MAX_CONCURRENT_REQUESTS=1

# 보안 설정
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# 개발/디버그 설정
SAVE_RAW_DATA=True
ENABLE_SQL_ECHO=True
PERFORMANCE_MONITORING=True

# ===========================================
# 사용 예시 및 주의사항
# ===========================================

# 1. 실제 사용시 아래 값들을 변경해주세요:
#    - DB_PASSWORD: 실제 MySQL 비밀번호
#    - KIWOOM_USER_ID, KIWOOM_PASSWORD: 키움 계정 정보
#    - SECRET_KEY: 랜덤 문자열로 변경
#    - TELEGRAM_BOT_TOKEN: 실제 봇 토큰으로 변경

# 2. 운영환경에서는 ENVIRONMENT=production으로 변경

# 3. 이 파일은 .gitignore에 추가하여 버전관리에서 제외

# 4. 팀원들과는 .env.example 파일을 공유하세요